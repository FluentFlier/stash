# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# SUPABASE
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081


# ============================================
# REDIS (Cache + Queue)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AI / LLM (Supermemory)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview


# Supermemory (required)
SUPERMEMORY_API_KEY=sm_your-supermemory-key
SUPERMEMORY_BASE_URL=https://api.supermemory.ai/v3/https://api.openai.com/v1

# Jina AI (required - for link content extraction)
JINA_API_KEY=jina_your-jina-api-key

# ============================================
# GOOGLE CALENDAR
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/auth/callback

# ============================================
# FIREBASE (Push Notifications)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ============================================
# LIVEKIT (Voice)
# ============================================
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.com

# ============================================
# AGENT CONFIGURATION
# ============================================
AGENT_MAX_REASONING_STEPS=5
AGENT_CONFIDENCE_THRESHOLD=0.7
ENABLE_PROACTIVE_AGENT=true
PROACTIVE_AGENT_INTERVAL_HOURS=1

# ============================================
# SECURITY CONFIGURATION
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Internal API key
INTERNAL_API_KEY=your-secure-internal-api-key

BACKEND_API_URL=https://glycogenic-marilynn-crustiest.ngrok-free.dev
