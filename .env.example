# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ============================================
# DATABASE (Supabase PostgreSQL)
# ============================================
# Get this from your Supabase project settings
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# ============================================
# REDIS (Cache + Queue)
# ============================================
# Local Redis: redis://localhost:6379
# Or use Railway/Upstash Redis
REDIS_URL=redis://localhost:6379

# ============================================
# AI / LLM
# ============================================
# OpenAI API key (required)
OPENAI_API_KEY=sk-your-openai-api-key

# Supermemory (optional - for enhanced context)
SUPERMEMORY_API_KEY=sm_your-supermemory-key
SUPERMEMORY_BASE_URL=https://api.supermemory.ai/v1/https/api.openai.com/v1

# Jina AI (required - for link content extraction)
JINA_API_KEY=jina_your-jina-api-key

# ============================================
# GOOGLE CALENDAR
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/auth/callback

# ============================================
# FIREBASE (Push Notifications - NO SMS)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ============================================
# LIVEKIT (Voice)
# ============================================
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.com

# ============================================
# AUTHENTICATION
# ============================================
# Generate a strong secret (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# AGENT CONFIGURATION
# ============================================
AGENT_MAX_REASONING_STEPS=5
AGENT_CONFIDENCE_THRESHOLD=0.7
ENABLE_PROACTIVE_AGENT=true
PROACTIVE_AGENT_INTERVAL_HOURS=1

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Request size limits (in bytes)
BODY_LIMIT_MAX=1048576

# HTTPS redirect (production only)
ENABLE_HTTPS_REDIRECT=false

# Internal API key for service-to-service communication
INTERNAL_API_KEY=your-secure-internal-api-key

# Database security
DATABASE_CONNECTION_LIMIT=10
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_QUERY_TIMEOUT=30000
